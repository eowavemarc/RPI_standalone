#kivy 1.0

<GrilleWidget>
	canvas:
		Color:
			rgb: 0.7, 0.7, 0.7
		Line:
			width: 1.0
			points: root.table1
		Line:
			width: 1.0
			points: root.table2
		Line:
			width: 1.0
			points: root.table3
		Color:
			rgb: 0,0,1
		Line:
			width: 2
			points: root.zero1,240,root.zero1,320
		Line:
			width: 2
			points: root.zero2,320,root.zero2,400
		Line:
			width: 2
			points: root.zero3,400,root.zero3,480
		Color:
			rgb: 1, 0, 0
		Line:
			width: 2.0
			points: 480, 240, 480, 480
		Color:
			rgb:0.2,0.2,0.2
		Line:
			width: 3
			rounded_rectangle:4,4,44,232,20
		Line:
			width: 3
			rounded_rectangle:57,4,44,232,20
		Line:
			width: 3
			rounded_rectangle:110,4,44,232,20
		Color:
			rgb: 0,0.5,0.1
		Ellipse:
			size: 30,30
			pos: 11, root.vol1
		Ellipse:
			size: 30,30
			pos: 64, root.vol2
		Ellipse:
			size: 30,30
			pos: 117, root.vol3
	canvas.after:
		Color:
			rgba: 0,0,0,root.alpha
		Rectangle:
			size: 800,480
		Color:
			rgb: 1,0.2,0
		Triangle:
			points: root.rate*200+400,root.hauteurRate+25,root.rate*200+410,root.hauteurRate+45,root.rate*200+390,root.hauteurRate+45
				
	
	Image:
		id: imagePlay1
		source: 'images/play.png'
		allow_stretch: True
		pos: 0,240
		size:80,80
		
	Image:
		id: imagePlay2
		source: 'images/play.png'
		pos: 0, 320
		allow_stretch: True
		size:80,80
		
	Image:
		id: imagePlay3
		source: 'images/play.png'
		allow_stretch: True
		size:80,80
		pos: 0, 400
		
	Image:
		id: imageVolrate1
		source: 'images/volrate.png'
		pos: 80, 240
		allow_stretch: True
		size:80,80
		
	Image:
		id: imageVolrate2
		source: 'images/volrate.png'
		pos: 80, 320
		allow_stretch: True
		size:80,80
		
	Image:
		id: imageVolrate3
		source: 'images/volrate.png'
		pos: 80, 400
		allow_stretch: True
		size:80,80
		
	
	Image:
		id: imageRateRegle
		source: 'images/reglerate.png'
		size: 800, 0
		pos: 0, root.hauteurRate
	Label:
		id: rate
		text: str((int(10*root.rate))*0.1)
		color: 1,0.3,0.1,1
		font_size:0
		pos: root.center_x, root.center_y
		
	Image:
		source: 'images/fond.png'
		allow_stretch: True
		pos:160,0
		width: 320
		height: 240
		keep_ratio: False
		canvas.after:
			Color:
				rgb: 0.6,0.1,0.1
			Ellipse:
				id: effect1
				size: 30,30
				pos: root.posXeffect1,root.posYeffect1
		
	Image:
		source: 'images/fond.png'
		pos:480,0
		size: 320, 240
		allow_stretch: True
		keep_ratio: False
		canvas.after:
			Color:
				rgb: 0.6,0.1,0.1
			Ellipse:
				id: effect2
				size: 30, 30
				pos: root.posXeffect2, root.posYeffect2

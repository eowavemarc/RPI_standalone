#kivy 1.0



<GrilleWidget>
	canvas:
		Color:
			rgb: 0.05, 0.05, 0.05
		Rectangle:
			size: 800, 480
		Color:
			rgb: 0.7, 0.7, 0.7
		Line:
			width: 1.0
			points: root.table1
		Line:
			width: 1.0
			points: root.table2
		Line:
			width: 1.0
			points: root.table3
		Line:
			width: 1.0
			points: root.table4
		Color:
			rgb: 0,0,1
		Line:
			width: 2
			points: root.zero1,0,root.zero1,120
		Line:
			width: 2
			points: root.zero2,120,root.zero2,240
		Line:
			width: 2
			points: root.zero3,240,root.zero3,360
		Line:
			width: 2
			points: root.zero4,360,root.zero4,480
		Color:
			rgb: 1, 0, 0
		Line:
			width: 2.0
			points: 520, 0, 520, 480
		
	
	Image:
